        "react-icons": "^4.3.1",
        "tailwindcss": "^3.1.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.0"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
