{
    "name": "frontend",
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "lint-staged": {
        "*.ts,*.tsx,*.js,*.cjs": [
            "eslint",
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "dev": "run-s dev:*",
        "build": "run-s build:*",
        "start": "next start",
        "dev:1-db-gen": "prisma generate",
        "dev:2-db-push": "prisma db push",
        "dev:3-db-seed": "prisma db seed",
        "dev:4-db-migrate": "prisma migrate dev",
        "dev:5-run": "cross-env NODE_OPTIONS='--inspect' next dev",
        "build:1-generate": "prisma generate",
        "build:2-migrate": "prisma migrate deploy",
        "build:3-next": "cross-env NODE_ENV=production next build",
        "studio": "prisma studio",
        "format": "prettier --write .",
        "check-format": "prettier --check .",
        "check-lint": "next lint --fix",
        "check-types": "tsc --pretty --noEmit",
        "push": "lint-staged && git push --all && git fetch --all",
        "commit": "git add . && git cz",
        "test-all": "npm run format && npm run check-format && npm run check-lint && npm run check-types && npm run build && npm run push",
        "prepare": "husky install"
    },
    "dependencies": {
        "@headlessui/react": "^1.6.6",
        "@heroicons/react": "^1.0.5",
        "@hookform/resolvers": "^2.9.7",
        "@next-auth/prisma-adapter": "^1.0.4",
        "@prisma/client": "^4.3.0",
        "@stripe/stripe-js": "^1.35.0",
        "@supabase/supabase-js": "^1.35.6",
        "@trpc/client": "^9.27.0",
        "@trpc/next": "^9.27.0",
        "@trpc/react": "^9.27.0",
        "@trpc/server": "^9.27.0",
        "axios": "^0.27.2",
        "base64-arraybuffer": "^1.0.2",
        "canvas-confetti": "^1.5.1",
        "daisyui": "^2.24.0",
        "micro-cors": "^0.1.1",
        "nanoid": "^4.0.0",
        "next": "^12.2.5",
        "next-auth": "^4.10.3",
        "next-validations": "^0.2.0",
        "nextjs-progressbar": "^0.0.14",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.2",
        "react-hook-form": "^7.34.2",
        "react-hot-toast": "^2.2.0",
        "react-icons": "^4.4.0",
        "react-images-uploading": "^3.1.7",
        "react-query": "^3.39.2",
        "stripe": "^10.2.0",
        "superjson": "^1.9.1",
        "tailwind-merge": "^1.6.0",
        "use-shopping-cart": "^3.1.2",
        "zod": "^3.18.0",
        "zustand": "^4.1.1"
    },
    "devDependencies": {
        "@heroicons/react": "^1.0.6",
        "@next/eslint-plugin-next": "^12.2.5",
        "@tailwindcss/aspect-ratio": "^0.4.0",
        "@tailwindcss/forms": "^0.5.0",
        "@types/canvas-confetti": "^1.4.2",
        "@types/micro": "^7.3.3",
        "@types/micro-cors": "^0.1.0",
        "@types/node": "^18.7.14",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@typescript-eslint/eslint-plugin": "^5.33.1",
        "@typescript-eslint/parser": "^5.33.1",
        "autoprefixer": "^10.4.8",
        "commitizen": "^4.2.5",
        "cross-env": "^7.0.3",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.22.0",
        "eslint-config-next": "^12.2.5",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.30.1",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.3",
        "micro": "^9.4.1",
        "micro-cors": "^0.1.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.16",
        "prettier": "^2.7.1",
        "prettier-plugin-tailwindcss": "^0.1.13",
